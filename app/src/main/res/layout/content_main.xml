<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.belosoft.mejorarencasa.Activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".33"
        android:orientation="vertical"
        android:background="@drawable/side_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/imageButtonFlexiones"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flexiones" />

            <ImageButton
                android:id="@+id/imageButtonSentadillas"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sentadillas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/imageButtonFondos"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/fondos2" />

            <ImageButton
                android:id="@+id/imageButtonAbdominales"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/abdominales2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/imageButtonDominadas"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/dominadas" />

            <ImageButton
                android:id="@+id/imageButtonGemelos"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight=".50"
                android:clickable="true"
                android:elevation="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/gemelos2" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
