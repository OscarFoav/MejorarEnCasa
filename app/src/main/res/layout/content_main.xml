<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.belosoft.SeflTrainer.Activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <ScrollView
            android:id="@+id/scrollViewMainActivity"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/imageButtonFlexiones"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="15dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/flexiones_peque" />

                    <ImageButton
                        android:id="@+id/imageButtonAbdominales"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="15dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/abdominales_peque" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageButton
                        android:id="@+id/imageButtonFondos"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/fondos_peque" />

                    <ImageButton
                        android:id="@+id/imageButtonSentadillas"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/sentadillas_peque" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageButton
                        android:id="@+id/imageButtonDominadas"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/dominadas_peque" />

                    <ImageButton
                        android:id="@+id/imageButtonGemelos"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".50"
                        android:background="@drawable/round_corner_image_view"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/gemelos_peque" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</android.support.constraint.ConstraintLayout>
