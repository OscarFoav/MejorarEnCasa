<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.belosoft.SeflTrainer">

    <application
        android:name="org.belosoft.SeflTrainer.App.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_stacero"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.belosoft.SeflTrainer.Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.belosoft.SeflTrainer.Activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="org.belosoft.SeflTrainer.Activities.PlantillaSeries"
            android:label="@string/app_name"
            android:parentActivityName="org.belosoft.SeflTrainer.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.belosoft.SeflTrainer.Activities.MainActivity" />
        </activity>
        <activity
            android:name="org.belosoft.SeflTrainer.Activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.belosoft.SeflTrainer.Activities.AcercaDeActivity"
            android:label="@string/action_acerca_de"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="org.belosoft.SeflTrainer.Activities.TestResistencia"
            android:label="@string/action_test_resistencia"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.belosoft.SeflTrainer.Activities.MainActivity" />
        </activity>
    </application>

</manifest>